generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongodb"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  email         String
  username      String
  password      String
  sentChats     Chat[] @relation("SenderRelation")
  receivedChats Chat[] @relation("ReceiverRelation")
  roomsOwned    Room[] @relation("OwnerRelation")
  roomsJoined   Room[] @relation("JoinRelation")
}

model Room {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  owner   User   @relation("OwnerRelation", fields: [ownerId], references: [id])
  ownerId String @db.ObjectId
  join    User   @relation("JoinRelation", fields: [joinId], references: [id])
  joinId  String @db.ObjectId
}

model Chat {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  message    String
  sender     User   @relation("SenderRelation", fields: [senderId], references: [id])
  senderId   String @db.ObjectId
  receiver   User   @relation("ReceiverRelation", fields: [receiverId], references: [id])
  receiverId String @db.ObjectId
}
